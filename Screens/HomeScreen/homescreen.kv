<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#80B3FF"
    text_color: "black"
    icon_color: "black"
    ripple_color: "#c5bdd2"
    selected_color: "#80B3FF"

<CustomMDCard@MDCard>
    size_hint: None, None
    size: "150dp", "150dp"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    elevation: 0.5
    md_bg_color: [1, 1, 1, 1]

<MDCardLabel@MDLabel>
    halign: "center"
    theme_text_color: "Custom"
    text_color: "black"

        
MDScreen:
    name: "homescreen"
    # Drawing operations performed before other widgets
    canvas.before: 
        #BG Color of the Whole Screen
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Logo" 
            # Navigation bar shadowy effect
            elevation: 0 
            # Position hint to place the app bar at the top of its parent widget
            pos_hint: {"top": 1} 
            md_bg_color: "white" 
            specific_text_color: "#000000" 
            # Left action items (e.g., menu icon) and their associated actions
            left_action_items:
                [['menu', lambda x: nav_drawer.set_state("open")]]
            right_action_items:
                [['account-circle', lambda x: nav_drawer.set_state("open")]] # If click, should bring user to account screen

        MDBottomNavigation:
            elevation: 0 
            panel_color: "white"

            MDBottomNavigationItem:
                name: "homescreen"
                icon: "home"
                text: "Home"

                MDScreen:
                    ScrollView:
                        bar_width: 0
                    
                        MDGridLayout:
                            cols: 1
                            adaptive_height: True
                            adaptive_width: True
                            pos_hint: {"center_x": 0.5, "center_y": 0.45}
                            spacing: "20dp"
                            padding: "20dp"

                            MDCard:
                                size_hint: None, None
                                size: "320dp", "150dp"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                elevation: 0.5
                                md_bg_color: [1, 1, 1, 1]

                                MDCardLabel:
                                    text: "Card Content"

                            # Grid Layout for Cards
                            MDGridLayout:
                                cols: 2
                                adaptive_height: True
                                adaptive_width: True
                                spacing: "20dp"
                                pos_hint: {"center_x": 0.5, "center_y": 0.25}

                                # Cards which contains the functions
                                CustomMDCard:
                                    MDCardLabel:
                                        text: "Card Content"
                                
                                CustomMDCard:
                                    MDCardLabel:
                                        text: "Card Content"

                                CustomMDCard:
                                    MDCardLabel:
                                        text: "Card Content"
            
            MDBottomNavigationItem:
                name: "mailscreen"
                icon: "mail"
                
                MDScreen:

                    MDLabel:
                        text: "Sample"




    