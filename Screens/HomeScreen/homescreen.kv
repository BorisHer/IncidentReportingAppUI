<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#80B3FF"
    text_color: "black"
    icon_color: "black"
    ripple_color: "#c5bdd2"
    selected_color: "#80B3FF"

<CustomMDCard@MDCard>
    size_hint: None, None
    size: "150dp", "150dp"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    elevation: 0.5
    md_bg_color: [1, 1, 1, 1]

<MDCardLabel@MDLabel>
    halign: "center"
    theme_text_color: "Custom"
    text_color: "black"

MDScreen:
    name: "homescreen"

    MDBoxLayout:
        orientation: "vertical"

        MDNavigationLayout:

            ScreenManager:

                Screen:

                    BoxLayout:
                        orientation: 'vertical'

                        MDTopAppBar:
                            title: "[font=BPoppins][color=#3400E7][size=24]Incident Reporting[/size][/color][/font]"
                            font_name: "BPoppins"
                            elevation: 0
                            pos_hint: {"top": 1}
                            md_bg_color: "white"
                            specific_text_color: "#000000"
                            left_action_items:
                                [['account-circle', lambda x: nav_drawer.set_state("open")]]
                            center_title: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'

                            MDBottomNavigation:
                                elevation: 0
                                panel_color: "white"

                                MDBottomNavigationItem:
                                    name: "homescreen"
                                    icon: "home"
                                    text: "Home"

                                    ScrollView:
                                        bar_width: 0

                                        MDGridLayout:
                                            cols: 1
                                            adaptive_height: True
                                            adaptive_width: True
                                            pos_hint: {"center_x": 0.5, "center_y": 0.45}
                                            spacing: "20dp"
                                            padding: "20dp"

                                            MDCard:
                                                size_hint: None, None
                                                size: "320dp", "150dp"
                                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                                elevation: 0.5
                                                md_bg_color: [1, 1, 1, 1]

                                                MDCardLabel:
                                                    text: "Card Content"

                                            MDGridLayout:
                                                cols: 2
                                                adaptive_height: True
                                                adaptive_width: True
                                                spacing: "20dp"
                                                pos_hint: {"center_x": 0.5, "center_y": 0.25}

                                                CustomMDCard:
                                                    MDCardLabel:
                                                        text: "Card Content"

                                                CustomMDCard:
                                                    MDCardLabel:
                                                        text: "Card Content"

                                                CustomMDCard:
                                                    MDCardLabel:
                                                        text: "Card Content"

                                MDBottomNavigationItem:
                                    name: "mailscreen"
                                    icon: "mail"

                                    MDScreen:
                                        MDLabel:
                                            text: "Sample"

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)
                width: "250dp"

                MDNavigationDrawerMenu:
                    MDNavigationDrawerLabel:
                        text: "Sample 1"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 1.1"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 1.2"

                    MDNavigationDrawerDivider:

                    MDNavigationDrawerLabel:
                        text: "Sample 2"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 2.1"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 2.2"
