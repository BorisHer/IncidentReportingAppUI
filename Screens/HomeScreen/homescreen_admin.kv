<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#80B3FF"
    text_color: "black"
    icon_color: "black"
    ripple_color: "#c5bdd2"
    selected_color: "#80B3FF"

MDScreen:
    name: "homescreen_admin"

    MDBoxLayout:
        orientation: "vertical"

        MDNavigationLayout:

            MDScreenManager:

                MDScreen:

                    BoxLayout:
                        orientation: 'vertical'

                        MDTopAppBar:
                            title: "[font=BPoppins][color=#3400E7][size=24]Incident Reporting[/size][/color][/font]"
                            font_name: "BPoppins"
                            elevation: 0
                            pos_hint: {"top": 1}
                            md_bg_color: "white"
                            specific_text_color: "#000000"
                            left_action_items:
                                [['account-circle', lambda x: nav_drawer.set_state("open")]]
                            center_title: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'

                            MDBottomNavigation:
                                elevation: 0
                                panel_color: "#3400E7"
                                selected_color_background: "#3400E7"
                                text_color_normal: 146/255, 193/255, 235/255, 1
                                text_color_active: 1, 1, 1, 5
                                font_name: "BPoppins"
                                font_size: "9sp"

                                MDBottomNavigationItem:
                                    name: "statistics"
                                    icon: "chart-line-variant"
                                    text: "Statistics"

                                    ScrollView:
                                        bar_width: 0

                                        MDLabel:
                                            text: "Statistics"
                                            halign: "center"

                                MDBottomNavigationItem:
                                    name: "users"
                                    icon: "account-supervisor-circle"
                                    text: "Users"

                                    MDScreen:
                                        MDLabel:
                                            text: "Users"
                                            halign: "center"

                                MDBottomNavigationItem:
                                    name: "reports"
                                    icon: "file-eye"
                                    text: "View Reports"

                                    MDScreen:
                                        MDLabel:
                                            text: "Reports"
                                            halign: "center"
                                            
            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)
                width: "250dp"

                MDNavigationDrawerMenu:
                    MDNavigationDrawerLabel:
                        text: "Sample 1"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 1.1"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 1.2"

                    MDNavigationDrawerDivider:

                    MDNavigationDrawerLabel:
                        text: "Sample 2"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 2.1"

                    DrawerClickableItem:
                        icon: "menu-right"
                        text: "Sample 2.2"