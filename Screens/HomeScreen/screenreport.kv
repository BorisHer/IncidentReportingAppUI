<TextF@MDTextField>
    font_name_hint_text: "MPoppins"
    font_name_helper_text: "MPoppins"
    font_name: "MPoppins"
    text_color_focus: "black"
    line_color_focus: "black"
    hint_text_color_focus: "black"

MDScreen:
    name: "screenreport"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 26/255, 24/255, 58/255, 255/255
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "homescreen"

        MDLabel:
            text: "Report Incident"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.88}
            color: 26/255, 24/255, 58/255, 1


        MDBoxLayout:
            orientation: "vertical"
            spacing: 0
            adaptive_height: True
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.78}

            TextF:
                hint_text: "Title"
                helper_text: "Enter the title of the report"
                

           # CustomTextInput:
                #hint_text: "Title of the Report"
                

            #FloatLine:

        MDFloatLayout:
            