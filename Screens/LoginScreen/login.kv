<TextF@MDTextField>
    font_name_hint_text: "MPoppins"
    font_name_helper_text: "MPoppins"
    font_name: "MPoppins"
    text_color_focus: "black"
    line_color_focus: "black"
    hint_text_color_focus: "black"

MDScreen: 
    name: "login"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 26/255, 24/255, 58/255, 255/255
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "W e l c o m e !"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.85}
            color: 26/255, 24/255, 58/255, 1

        MDLabel:
            text: "Log in to continue"
            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.79}
            color: 26/255, 24/255, 58/255, 1 # should be lighter color

        MDBoxLayout:
            orientation: "vertical"
            spacing: "20dp"
            adaptive_height: True
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.45, "center_y": 0.60}
            
            TextF:
                id: email_input
                hint_text: "Email"
                helper_text: "Enter your email"
    
            TextF:
                id: password_input
                hint_text: "Password"
                helper_text: "Enter your password"
                password: True

        Button:
            text: "LOGIN"
            size_hint: 0.66, 0.065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.38}
            font_name: "BPoppins"
            on_release:
                # This will call the on_login method in your main.py
                app.on_login(email_input.text, password_input.text)
            canvas.before:
                Color:
                    rgba: 52/255, 0, 231/255, 255/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDTextButton:
            text: "Forgot Password?" # Can be Sign Up
            pos_hint: {"center_x": 0.5, "center_y": 0.32}
            color: 108/255, 117/255, 125/255, 1
            font_size: "12sp"
            font_name: "BPoppins"
