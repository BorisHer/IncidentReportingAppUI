<TextF@MDTextField>
    font_name_hint_text: "MPoppins"
    font_name_helper_text: "MPoppins"
    font_name: "MPoppins"
    text_color_focus: "black"
    line_color_focus: "black"
    hint_text_color_focus: "black"

MDScreen: 
    name: "signup"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 26/255, 24/255, 58/255, 255/255
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "H i !"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.85}
            color: 26/255, 24/255, 58/255, 1

        MDLabel:
            text: "Create a new account"
            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.79}
            color: 26/255, 24/255, 58/255, 1 # should be lighter color

        MDBoxLayout:
            orientation: "vertical"
            spacing: "20dp"
            adaptive_height: True
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.45, "center_y": 0.48}

            TextF:
                id: name_input
                hint_text: "Name"
                helper_text: "Enter your name"

            TextF:
                id: email_input
                hint_text: "Email"
                helper_text: "Enter your email"

            TextF:
                id: password_input
                hint_text: "Password"
                helper_text: "Enter your password"
                password: True

            TextF:
                id: birthday_input
                hint_text: "Birthday"
                helper_text: "Enter your birthday (mm/dd/yyyy)"

        Button:
            text: "SIGNUP"
            size_hint: 0.66, 0.065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            font_name: "BPoppins"
            on_release:
                app.on_signup(name_input.text, email_input.text, password_input.text, birthday_input.text)
            canvas.before:
                Color:
                    rgba: 52/255, 0, 231/255, 255/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDTextButton:
            text: "Already have an account? Sign In"
            font_name: "BPoppins"
            font_size: "11.5sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.09}
            color: 108/255, 117/255, 125/255, 1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
