<CustomTextInput@TextInput>
    font_name: "MPoppins"
    size_hint_y: 0.75
    pos_hint: {"center_x": 0.43, "center_y": 0.5}
    background_color: 1, 1, 1, 0
    foreground_color: 0, 0, 59/255, 255/255
    cursor_color: 0, 0, 59/255, 255/255
    font_size: "14sp"
    cursor_width: "2sp"
    multiline: False

<FloatLine@MDFloatLayout>
    pos_hint: {"center_x": 0.45, "center_y": 0}
    size_hint_y: 0.03
    md_bg_color: 178/255, 178/255, 178/255, 255/255
    

MDScreen: 
    name: "signup"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 26/255, 24/255, 58/255, 255/255
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "H i !"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.85}
            color: 26/255, 24/255, 58/255, 1

        MDLabel:
            text: "Create a new account"
            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.79}
            color: 26/255, 24/255, 58/255, 1 # should be lighter color

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.71}
            
            CustomTextInput:
                hint_text: "Name"

            FloatLine:

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            
            CustomTextInput:
                hint_text: "Email"

            FloatLine:

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.45}

            CustomTextInput:
                hint_text: "Password"

            FloatLine:

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.32}

            CustomTextInput:
                hint_text: "Birthday (MM/DD/YYYY)"
                
            FloatLine:

        Button:
            text: "SIGNUP"
            size_hint: 0.66, 0.065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.17}
            font_name: "BPoppins"
            # Can be link to the homescreen
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "homescreen"
            canvas.before:
                Color:
                    rgba: 52/255, 0, 231/255, 255/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDTextButton:
            text: "Already have an account? Sign In"
            font_name: "BPoppins"
            font_size: "11.5sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.11}
            color: 108/255, 117/255, 125/255, 1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"