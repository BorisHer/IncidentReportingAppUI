MDScreen: 
    name: "signup"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 26/255, 24/255, 58/255, 255/255
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "H i !"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.85}
            color: 119/255, 82/255, 254/255, 1

        MDLabel:
            text: "Create a new account"
            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.79}
            color: 119/255, 82/255, 254/255, 1 # should be lighter color

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.71}
            
            TextInput:
                hint_text: "Username"
                font_name: "MPoppins"
                size_hint_y: 0.75
                pos_hint: {"center_x": 0.43, "center_y": 0.5}
                background_color: 1, 1, 1, 0
                foreground_color: 0, 0, 59/255, 255/255
                cursor_color: 0, 0, 59/255, 255/255
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False

            MDFloatLayout:
                pos_hint: {"center_x": 0.45, "center_y": 0}
                size_hint_y: 0.03
                md_bg_color: 178/255, 178/255, 178/255, 255/255

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            
            TextInput:
                hint_text: "Email"
                font_name: "MPoppins"
                size_hint_y: 0.75
                pos_hint: {"center_x": 0.43, "center_y": 0.5}
                background_color: 1, 1, 1, 0
                foreground_color: 0, 0, 59/255, 255/255
                cursor_color: 0, 0, 59/255, 255/255
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False

            MDFloatLayout:
                pos_hint: {"center_x": 0.45, "center_y": 0}
                size_hint_y: 0.03
                md_bg_color: 178/255, 178/255, 178/255, 255/255

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.45}

            TextInput:
                hint_text: "Password"
                font_name: "MPoppins"
                size_hint_y: 0.75
                pos_hint: {"center_x": 0.43, "center_y": 0.5}
                background_color: 1, 1, 1, 0
                foreground_color: 0, 0, 59/255, 255/255
                cursor_color: 0, 0, 59/255, 255/255
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                password: True

            MDFloatLayout:
                pos_hint: {"center_x": 0.45, "center_y": 0}
                size_hint_y: 0.03
                md_bg_color: 178/255, 178/255, 178/255, 255/255

        Button:
            text: "SIGNUP"
            size_hint: 0.66, 0.065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            font_name: "BPoppins"
            # Can be link to the homescreen
            # on_release:
                # root.manager.transition.direction = "left"
                # root.manager.current = "login"
            canvas.before:
                Color:
                    rgba: 52/255, 0, 231/255, 255/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDLabel:
            text: "or"
            color: 52/255, 0, 231/255, 255/255
            pos_hint: {"center_y": 0.22}
            font_size: "12sp"
            font_name: "BPoppins"
            halign: "center"
            
        MDFloatLayout: # Divider 1
            md_bg_color: 178/255, 178/255, 178/255, 255/255
            size_hint: 0.3, 0.002
            pos_hint: {"center_x": 0.3, "center_y": 0.218}

        MDFloatLayout: # Divider 2
            md_bg_color: 178/255, 178/255, 178/255, 255/255
            size_hint: 0.3, 0.002
            pos_hint: {"center_x": 0.7, "center_y": 0.218}

        MDLabel:
            text: "Social Media Login"
            font_name: "BPoppins"
            font_size: "13sp"
            halign: "center"
            pos_hint: {"center_y": 0.16}
            color: 135/255, 133/255, 193/255, 255/255

        # Might use
        MDGridLayout:
            cols: 3
            adaptive_height: True
            adaptive_width: True
            pos_hint: {"center_x": 0.5, "center_y": 0.11}
            
            MDIconButton:
                icon: "google"
                icon_color: "black"
            
            MDIconButton:
                icon: "facebook"
                icon_color: "black"

            MDIconButton:
                icon: "twitter"
                icon_color: "black"

        MDTextButton:
            text: "Already have an account? Sign In"
            font_name: "BPoppins"
            font_size: "11sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.06}
            color: 135/255, 133/255, 193/255, 255/255
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"