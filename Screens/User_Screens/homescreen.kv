#: import NoTransition kivy.uix.screenmanager.NoTransition

<CustomMDCard@MDCard>
    size_hint: None, None
    size: "150dp", "150dp"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    elevation: 0.5
    md_bg_color: [1, 1, 1, 1]
    focus_behavior: True
    focus_color: "#E1E0E2"

<CardButton@MDIconButton>
    icon_size: "80sp"
    pos_hint: {"center_x": .5}
    
<MDCardLabel@MDLabel>
    halign: "center"
    theme_text_color: "Custom"
    text_color: "black"
    font_name: "MPoppins"
    font_size: "15sp"

<CardBox@BoxLayout>
    orientation: 'vertical'

MDScreen:
    name: "homescreen"

    canvas.before:
        Color:
            rgba: 255/255, 255/255, 255/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDNavigationLayout:
        
        ScreenManager:
            
            Screen:
                
                BoxLayout:
                    orientation: 'vertical'
                    
                    MDTopAppBar:
                        title: "[font=BPoppins][color=#3400E7][size=24]Incident Reporting[/size][/color][/font]"
                        font_name: "BPoppins"
                        elevation: 0
                        pos_hint: {"top": 1}
                        md_bg_color: "white"
                        specific_text_color: "#000000"
                        left_action_items:
                            [['account-circle', lambda x: nav_drawer.set_state("open")]]
                        center_title: True

                    ScrollView:
                        bar_width: 0

                        MDGridLayout:
                            cols: 1
                            adaptive_height: True
                            adaptive_width: True
                            pos_hint: {"center_x": 0.5, "center_y": 0.45}
                            spacing: "20dp"
                            padding: "20dp"

                            MDCard:
                                size_hint: None, None
                                size: "320dp", "150dp"
                                orientation: "vertical"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                elevation: 0.5
                                md_bg_color: [1, 1, 1, 1]

                                BoxLayout:
                                    id: image_container
                                    orientation: "vertical"
                                    size_hint_y: 0.7

                                    Image:
                                        source: "Screens\\Assets\\Good.png"
                                    
                                MDLabel:
                                    id: credit_score_label
                                    text: "Your Text Here"
                                    size_hint_y: 0.3
                                    halign: "center"
                                    theme_text_color: "Custom"
                                    text_color: "black"
                                    font_name: "MPoppins"
                                    font_size: "15sp"

                            MDGridLayout:
                                cols: 2
                                adaptive_height: True
                                adaptive_width: True
                                spacing: "20dp"
                                pos_hint: {"center_x": 0.5, "center_y": 0.25}

                                CustomMDCard:
                                
                                    CardBox: 
                                        
                                        CardButton:
                                            icon: "Screens\\Assets\\report.png"
                                            on_press:
                                                root.manager.transition = NoTransition()
                                                root.manager.current = "screenreport"
                                        
                                        MDCardLabel:
                                            text: "Report Incident"

                                CustomMDCard:
                                    
                                    CardBox:
                                        
                                        CardButton:
                                            icon: "Screens\\Assets\\sos.png"
                                            on_press:
                                                app.submitSos()
                                                app.show_user_success_dialog('homescreen')

                                        MDCardLabel:
                                            text: "SOS"

                                CustomMDCard:
                                    
                                    CardBox:

                                        CardButton:
                                            icon: "Screens\\Assets\\history.png"
                                            on_press: 
                                                root.manager.transition = NoTransition()
                                                app.add_user_report_history_screen()

                                        MDCardLabel:
                                            text: "Report History"

                MDNavigationDrawer:
                    id: nav_drawer
                    radius: (0, 16, 16, 0)
                    width: "250dp"
                    elevation: 0.5

                    BoxLayout:
                        orientation: "vertical"
                        spacing: "12dp"

                        MDLabel:
                            id: currentUser
                            text: "Username" # Change it to the name of the current user
                            font_size: "18sp"
                            font_name: "BPoppins"
                            padding: "12dp", 0, 0, 0
                            size_hint_y: None
                            height: self.texture_size[1]

                        MDSeparator:
                            height: "1dp"
                            size_hint_y: None

                        MDRoundFlatIconButton:
                            text: "Log Out"
                            icon: "logout"
                            line_color: 1, 1, 1, 1
                            font_name: "MPoppins"
                            font_size: "16sp"
                            text_color: 0, 0, 0, 1
                            icon_color: 0, 0, 0, 1
                            padding: "12dp", 0, 0, 0
                            size_hint_y: None
                            focus_color: "#80B3FF"
                            
                            # Create a logout function
                            on_release: 
                                root.manager.transition = NoTransition()
                                root.manager.current = "main"

                        # Used to move the text up
                        ScrollView:

                        

