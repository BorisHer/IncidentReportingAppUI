MDScreen:
    name: "screenreport"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 26/255, 24/255, 58/255, 255/255
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "homescreen"

        MDLabel:
            text: "Report Incident"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": 0.6, "center_y": 0.88}
            color: 26/255, 24/255, 58/255, 1


        MDBoxLayout:
            orientation: "vertical"
            spacing: "5dp"
            adaptive_height: True
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.55}

            TextF:
                id: title
                hint_text: "Title"
                helper_text: "Enter the title of the report"

            TextF:
                id: choice1
                hint_text: "Incident Type"
                on_focus: if self.focus: app.show_incident_type_dropdown(self)   

            TextF:
                id: imagepath
                hint_text: "Enter image path"
                helper_text: "Enter or select image path"
                helper_text: "Tap the folder icon to choose an image"
                helper_text_mode: "on_focus"
                # on_focus: app.filechooser_open()
            
            TextF:
                id: details
                hint_text: "Details"
                helper_text: "Specify"

            TextF:
                id: urgency
                hint_text: "Select Urgency Level"
                on_focus: if self.focus: app.show_urgency_dropdown(self)   

        Button:
            text: "SUBMIT"
            size_hint: 0.66, 0.065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.20}
            font_name: "BPoppins"
            on_release:
                app.change_screen_and_submit('homescreen')
                app.show_user_success_dialog('homescreen')
            canvas.before:
                Color:
                    rgba: 52/255, 0, 231/255, 255/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]  